container_commands:
  01-setupredis:
    command: sudo amazon-linux-extras install redis6
  02-startredis:
    command: sudo systemctl start redis
  03-createEFS:
    command: mkdir /mnt/efs
  04-linkEFS:
    command: "sudo mount -t nfs4 -o nfsvers=4.1,rsize=1048576,wsize=1048576,hard,timeo=600,retrans=2,noresvport fs-0ad96e89c3650209a.efs.us-east-1.amazonaws.com:/ /mnt/efs"
  05-chown:
    command: "chown -R webapp:webapp /mnt/efs"
  06-simlink:
    command: "sudo ln -s /mnt/efs/uploads /var/www/html/wp-contents"
